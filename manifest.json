{
  "manifest_version": 3,
  "name": "Duolingo Focus",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.duolingo.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://*.duolingo.com/*"]
}
